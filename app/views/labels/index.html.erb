<h1><%= t('.title') %></h1>

<table class = "table">
  <thead>
    <tr>
      <th><%= '名前' %></th>
      <th><%= 'タスク数' %></th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.name%></td>
        <td><%= label.tasks.count %></td>
        <td><%= link_to t('common.edit'), edit_label_path(label), class: "edit-label btn btn-sm btn-success" %></td>
        <td><%= link_to t('common.destroy'), label_path(label), method: :delete, data: { confirm: t('common.confirm_destroy') }, class: "destroy-label btn btn-sm btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
