<h1><%= t('.title') %></h1>
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
  <%= f.label t('common.email') %>
  <%= f.email_field :email, id: 'session_email', class: "form-control" %>
  <%= f.label t('common.password') %>
  <%= f.password_field :password, id: 'session_password', class: "form-control"%><br><br>
  <%= f.submit t('common.sign_in'), id: "create-session", class: "btn btn-sm btn-info"%>
<% end %>
