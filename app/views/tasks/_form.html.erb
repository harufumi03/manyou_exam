<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "件の") %> エラーがあります</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div><br>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, class: "form-control" %>
  </div><br>

  <div class="deadline">
    <%= form.label :deadline_on %>
    <%= form.date_field :deadline_on, class: "form-control" %>
  </div><br>

  <div class="priority">
    <%= form.label :priority %>
    <%= form.select :priority, [ "低", "中", "高" ], {include_blank: true}, class: "form-control" %>
  </div><br>

  <div class="status">
    <%= form.label :status %>
    <%= form.select :status, [ "未着手", "着手中", "完了" ], {include_blank: true}, class: "form-control" %>
  </div><br>

  <div class="field">
      <%= form.label "ラベル" %>
    <% Label.all.each do |label| %>
      <%= form.check_box :label_ids, { multiple: true, include_hidden: false }, label[:id] %>
      <%= label.name %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-sm btn-info" %>
  </div>

<% end %>
